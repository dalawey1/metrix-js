{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "lib": ["es2015", "dom"],
        "declaration": true,
        "downlevelIteration": true,
        "outDir": "./dist",
        "strict": true,
        "baseUrl": "src",
        "esModuleInterop": true,
        "moduleResolution": "node", // Change the value of moduleResolution
        "resolveJsonModule": true // Add this line
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}